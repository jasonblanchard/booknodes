<%= form_for([@event, idea], :remote => true, :html => { :multipart => true }) do |f| %>
  <div class='row'>
    <%= f.text_area :note, :placeholder => 'Note' %>
    <%= f.text_field :nodes, :value => idea.list_nodes, :placeholder => 'Idea nodes' %>
    <%= f.hidden_field :page, :class => 'single-tag-select' %>
    <%= f.label :image, f.object.new_record? ? "Upload a page image" : "Replace page image" %>
    <%= image_tag idea.image.url(:thumb), :class => 'thumbnail' unless idea.image_file_name.nil? %>
    <br />
    <%= f.file_field :image %>
  </div>
  <div class='row actions'>
    <%= f.submit :class => 'btn' %>

    <% if idea.persisted? %>
      <a href='#' class='btn cancel-idea-update-form'>Cancel</a>
      <%= link_to "Delete", book_event_idea_path(@event, idea), :method => :delete, :remote => true, :class => "link-warning", :data => { :confirm => "Are you sure?" } %>
    <% end %>
  </div>

<% end %>
