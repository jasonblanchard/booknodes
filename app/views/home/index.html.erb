<% if user_signed_in? %>
  <div class='book-list'>
    <% if @events %>
      <% @events.each do |event| %>
        <div class='event col-md-2'><strong><%= link_to event.title, event  %></strong></div>
      <% end %>
    <% end %>

    <div>
      <%= link_to '+', new_book_event_path, :class => 'btn btn-default btn-lg' %>
    </div>
  </div>
<% else %>
  <div class="col-md-12">
    <p>Booknodes helps you track your notes in the margin as you read books and stories.</p><p>Easily tag keywords, attach a note to a page number or snap a photo to remember a great paragraph.</p>
    <%= link_to "Sign in with Goodreads", user_omniauth_authorize_path(:goodreads) %> to get started.
  </div>
<% end %>
